<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.technicpack</groupId>
  <artifactId>launcher</artifactId>
  <name>Technic Launcher</name>
  <version>4.0-${buildNumber}</version>
  <description>Minecraft launcher for installing and updating Modpacks from the Technic Platform.</description>
  <url>http://www.technicpack.net</url>
  <ciManagement>
    <system>jenkins</system>
    <url>http://build.technicpack.net/job/LauncherV3/</url>
  </ciManagement>
  <inceptionYear>2014</inceptionYear>
  <scm>
    <connection>scm:git:git://github.com/TechnicPack/LauncherV3.git</connection>
    <developerConnection>scm:git:git@github.com:TechnicPack/LauncherV3.git</developerConnection>
    <url>https://github.com/TechnicPack/LauncherV3/tree/dev</url>
  </scm>
  <organization>
    <name>Syndicate, LLC</name>
    <url>http://www.technicpack.net</url>
  </organization>
  <build>
    <defaultGoal>clean install</defaultGoal>
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <directory>${project.basedir}</directory>
        <includes>
          <include>LICENSE.txt</include>
        </includes>
      </resource>
      <resource>
        <targetPath>net/technicpack/launcher/resources</targetPath>
        <directory>${project.basedir}/src/main/resources</directory>
        <includes>
          <include>**/*</include>
        </includes>
        <excludes>
          <exclude>app/*</exclude>
          <exclude>exe/*</exclude>
        </excludes>
      </resource>
      <resource>
        <targetPath>net/technicpack/launcher/resources</targetPath>
        <filtering>true</filtering>
        <directory>${project.basedir}/src/main/resources</directory>
        <includes>
          <include>version</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.0</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
          <compilerArguments>
            <O>-Xlint:all</O>
            <O>-Xlint:-path</O>
          </compilerArguments>
          <showWarnings>true</showWarnings>
          <showDeprecation>true</showDeprecation>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>${mainClass}</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>true</minimizeJar>
              <filters>
                <filter>
                  <artifact>net.technicpack:*</artifact>
                  <includes>
                    <include>**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>org.jdom:jdom</artifact>
                  <includes>
                    <include>org/jdom/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>rome:rome</artifact>
                  <includes>
                    <include>com/sun/syndication/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.txt</exclude>
                    <exclude>META-INF/info.xml</exclude>
                    <exclude>META-INF/ASL2.0</exclude>
                    <exclude>META-INF/LICENSE</exclude>
                    <exclude>META-INF/NOTICE</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>static_build_number</id>
      <properties>
        <buildNumber>0</buildNumber>
      </properties>
    </profile>
    <profile>
      <id>dynamic_build_number</id>
      <properties>
        <buildNumber>${env.BUILD_NUMBER}</buildNumber>
      </properties>
    </profile>
  </profiles>
  <properties>
    <buildNumber>0</buildNumber>
    <mainClass>${project.groupId}.${project.artifactId}.LauncherMain</mainClass>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

